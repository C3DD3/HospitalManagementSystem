@model HospitalManagementSystem.Models.Appointment

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="margin-top: 20px">Make a Appointment</h1>
<hr / style="margin-bottom: 40px;">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Patient Name</label>
                <select asp-for="PatientId" class="form-control" asp-items="ViewBag.Patients"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Doctor Name</label>
                <select asp-for="DoctorId" class ="form-control" asp-items="ViewBag.Doctors"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Appointment Date</label>
                <input asp-for="AppointmentDate" class="form-control" />
                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
            </div>
            <div class="form-group"; style="margin-top: 60px;">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-warning" style="margin-left:20px; margin-right:20px;" href="/Appointments/Index">My Appointments</a>
                <a class="btn btn-danger" href="/Patients/PersonalizedIndex">Go Back</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
