@model HospitalManagementSystem.Models.Appointment

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="margin-bottom: 30px; margin-top:30px;">Appointment Details</h1>

<div>
    <hr / style="margin-bottom: 40px;">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AppointmentDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AppointmentDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class = "col-sm-10">
        @{ 
            var fullNameP = $"{Model.Patient.FirstName} {Model.Patient.LastName}";
         }
            @Html.DisplayFor(model => fullNameP)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Doctor)
        </dt>
        <dd class = "col-sm-10">
        @{ 
            var fullNameD = $"{Model.Doctor.FirstName} {Model.Doctor.LastName}";
         }
            @Html.DisplayFor(model => fullNameD)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Doctor.Department)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Doctor.Department.Name)
        </dd>
    </dl>
</div>
<div style="margin-top:60px;">
    <a class="btn btn-warning" href="/Appointments/Edit/@Model?.AppointmentId">Edit</a> |
    <a class="btn btn-danger" href="/Appointments">Go Back</a>
</div>
