@model IEnumerable<HospitalManagementSystem.Controllers.AppointmentsController.AppointmentViewModel>

@{
    ViewData["Title"] = "Appointments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="margin-top: 20px">Appointments</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentDate)
            </th>
            <th>
                Patient Name
            </th>
            <th>
                Doctor Name
            </th>
            <th>
                Department
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentDate)
                </td>
                <td>
                    @item.PatientName
                </td>
                <td>
                    @item.DoctorName
                </td>
                <td>
                    @item.DepartmentName
                </td>
            </tr>
        }
    </tbody>
</table>
