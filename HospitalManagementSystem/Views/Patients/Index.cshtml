@model IEnumerable<HospitalManagementSystem.Models.Patient>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="margin-top:30px;">Patients</h1>
<table class="table">
    <thead>
        <tr>
            <th>National ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>User ID</th>
            <th>Date of Birth</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NationalId)</td>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>@Html.DisplayFor(modelItem => item.IdentityUserId)</td>
                <td>@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PatientId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PatientId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PatientId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a class="btn btn-warning" href="/Patients/Create" style="margin-top: 40px;">Create New</a>
    <a class="btn btn-danger" href="/Managers/Index" style="margin-left:25px;margin-top: 40px;">Go Back</a>
</p>
